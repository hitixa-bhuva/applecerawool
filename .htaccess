RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]
Header always set Content-Security-Policy "upgrade-insecure-requests"

# ----------------------------------------------------------
# ðŸ”¹ Default Redirects
# ----------------------------------------------------------
# Redirect / to index.php
RewriteRule ^$ index.php [L,NC]
RewriteRule ^home(\.php)?$ index.php [L,NC]

RewriteRule ^about-us$ about.php [L,NC]
RewriteRule ^products$ product.php [L,NC]
RewriteRule ^industries$ industries.php [L,NC]
RewriteRule ^services$ services.php [L,NC]
RewriteRule ^contact$ contact.php [L,NC]
RewriteRule ^blog$ blog.php [L,NC]
RewriteRule ^project-management$ project-management.php [L,NC]
RewriteRule ^sitemap$ Sitemap.html [L,NC]
RewriteRule ^privacy-policy$ privacy-policy.html [L,NC]
RewriteRule ^terms-of-use$ terms-of-use.html [L,NC]

# Products
